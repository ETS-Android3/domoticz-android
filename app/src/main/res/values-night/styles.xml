<resources>
    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/secondary_accent</item>
        <item name="colorPrimaryDark">@color/secondary_dark</item>
        <item name="colorAccent">@color/secondary_accent</item>

        <item name="md_background_color">@color/secondary_dark</item>
        <item name="android:windowBackground">@color/secondary_dark</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogDarkTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogDarkTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogDarkTheme</item>
        <item name="android:actionBarStyle">@style/AppThemeDarkActionBar</item>
        <item name="actionBarStyle">@style/AppThemeDarkActionBar</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/secondary_dark</item>
        <item name="material_drawer_primary_text">@color/white</item>
        <item name="material_drawer_primary_icon">@color/white</item>
        <item name="material_drawer_secondary_text">@color/white</item>
        <item name="material_drawer_hint_text">@color/white</item>
        <item name="material_drawer_divider">@color/secondary</item>
        <item name="material_drawer_selected">@color/secondary_dark</item>
        <item name="material_drawer_selected_text">@color/secondary_accent</item>
        <item name="material_drawer_header_selection_text">@color/white</item>

        <!-- Style to use for Snackbars in this theme. -->
        <item name="snackbarStyle">@style/snackbarDarkStyle</item>
        <item name="snackbarButtonStyle">@style/snackbarDarkButton</item>
        <item name="snackbarTextViewStyle">@style/snackbarDarkText</item>

        <!-- Needed for the theme activity -->
        <item name="colorControlHighlight">@color/alt1_accent</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="toolbarItemTint">@color/white</item>

        <!-- Custom values -->
        <item name="toolbarTextColor">@color/white</item>
        <item name="toolbarBackground">@color/secondary</item>
        <item name="recyclerBackground">@color/secondary_dark</item>
        <item name="listviewRowBackground">@color/secondary</item>
        <item name="backdropBackground">@color/secondary</item>
        <item name="buttonTextColor">@color/secondary_accent</item>
        <item name="graphTextColor">@color/white</item>
        <item name="wizardCardColor">@color/secondary</item>
        <item name="wizardTitleColor">@color/white</item>
        <item name="temperatureTextColor">@color/white</item>
        <item name="preferenceIconColor">@color/white</item>
        <item name="editTextBackgroundColor">@color/secondary</item>
        <item name="editTextTextColor">@color/white</item>
        <item name="floatingActionBar">@color/secondary_accent</item>
        <item name="floatingActionBarText">@color/white</item>

        <!-- notification history -->
        <item name="incomingDefaultBubbleColor">@color/secondary</item>
        <item name="incomingTextColor">@color/white</item>
        <item name="outcomingDefaultBubbleColor">@color/secondary_accent</item>
        <item name="outcomingTextColor">@color/white</item>
    </style>
</resources>
